DOTDIR=~/.dotfiles

# init history
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
setopt appendhistory

# print prompt with colors
autoload -U colors && colors

# DOT_GITHUB_MIRROR 默认值
export DOT_GITHUB_MIRROR=${DOT_GITHUB_MIRROR:-"https://github.com"}

source $DOTDIR/zsh/plugin.zsh
source $DOTDIR/zsh/alias.zsh
