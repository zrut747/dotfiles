DOTDIR=~/.dotfiles

# init history
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
setopt appendhistory

# print prompt with colors
autoload -U colors && colors
if [ -n "$DISPLAY" ]; then
  export TERM=xterm-256color
else
  export TERM=screen-256color
fi

# Default Github mirror
DOT_GITHUB_MIRROR=https://kgithub.com

source $DOTDIR/zsh/plugin.zsh
source $DOTDIR/aliases/aliases.sh
